{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2021", "DOM"],
    "module": "ES2020",
    "declaration": true,
    "outDir": "./lib/esm",
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDirs": ["src"]
  },
  "include": ["src", "i18n"],
  "exclude": ["node_modules"]
}
